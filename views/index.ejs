<%- include('./partials/head.ejs') %>

<main>
  <h1><span class="titel"><%= squad.name %> </span>Samen reizen?</h1>
  <p class="subtitel">klik op de stad om te zien met wie je kunt reizen</p>

    <!-- hier komt de mapdata -->
 
<section class="nl-map">
<img src="/assets/nl-kaart.png" alt="nl kaart" style="width: 30rem;">
 <div class="test">
    <% provinces.forEach(province => { %>
      <a href="/?provincies=<%= province %>" aria-label="filter option <%= province %>"><%= province %></a>
      <% }) %>
  </div>
</section>
<section class="scroll-douwn">
  <a href="#members">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M201.4 406.6c12.5 12.5 32.8 12.5 45.3 0l192-192c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 338.7 54.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l192 192z"/></svg>
  </a>
</section>

<section id="members" class="filter-info">
  <h2 class="filter-titel"><%= provinces[5] %></h2>
  <div class="filter-quantity">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/></svg>
    <em>4</em>
  </div>
   
</section>

<section  class="members"> 
  <!-- Hier komen de members -->
<% squad.members.forEach(member => { %>
<article class="card1">
<div class="card">
 <div class="front-card"> 
<svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
<% if (member.avatar) { %>
  <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
  <% }else{ %>
  <img src="/assets/placeholder-person.png" alt="Placeholder avatar" />
  <% } %>
  <div class="like-svg">
  <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z"/></svg>
</div>
</div>
<div class="back-card">
  <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
  <% if (member.avatar) { %>
    <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
    
    <% }else{ %>
    <img src="/assets/placeholder-person.png" alt="Placeholder avatar" />
    <% } %>
<div class="back-card_info">
  <h3><%= member.name %></h3>
  <p><%= member.slug %></p>
  <a href="https://github.com/<%= member.gitHubHandle %>">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path d="M562.8 267.7c56.5-56.5 56.5-148 0-204.5c-50-50-128.8-56.5-186.3-15.4l-1.6 1.1c-14.4 10.3-17.7 30.3-7.4 44.6s30.3 17.7 44.6 7.4l1.6-1.1c32.1-22.9 76-19.3 103.8 8.6c31.5 31.5 31.5 82.5 0 114L405.3 334.8c-31.5 31.5-82.5 31.5-114 0c-27.9-27.9-31.5-71.8-8.6-103.8l1.1-1.6c10.3-14.4 6.9-34.4-7.4-44.6s-34.4-6.9-44.6 7.4l-1.1 1.6C189.5 251.2 196 330 246 380c56.5 56.5 148 56.5 204.5 0L562.8 267.7zM43.2 244.3c-56.5 56.5-56.5 148 0 204.5c50 50 128.8 56.5 186.3 15.4l1.6-1.1c14.4-10.3 17.7-30.3 7.4-44.6s-30.3-17.7-44.6-7.4l-1.6 1.1c-32.1 22.9-76 19.3-103.8-8.6C57 372 57 321 88.5 289.5L200.7 177.2c31.5-31.5 82.5-31.5 114 0c27.9 27.9 31.5 71.8 8.6 103.9l-1.1 1.6c-10.3 14.4-6.9 34.4 7.4 44.6s34.4 6.9 44.6-7.4l1.1-1.6C416.5 260.8 410 182 360 132c-56.5-56.5-148-56.5-204.5 0L43.2 244.3z"/></svg>
  </a>
</div>
  
</div>
</div>
</article>
<% }) %>
</section>
</main>

